{
  "name": "chrismillsjs",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "DEBUG=app,app:* nodemon server.js",
    "test": "mocha",
    "prettier": "prettier '**/*.+(js|json|jsx|css)'",
    "format": "yarn run prettier -- --write",
    "lint": "eslint src --fix",
    "beautify": "yarn run lint && yarn run prettier -- --list-different",
    "validate": "yarn run beautify && yarn run test"
  },
  "author": "Ayobami Ayo-Salami",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "pg": "^7.11.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "debug": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^6.1.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test"
    }
  }
}
